;include-file      = $HOME/.config/polybar/colors.ini
;include-directory = $HOME/.config/polybar/modules

monitor          = HDMI-0
monitor-fallback =
monitor-strict   = false
monitor-exact    = true

override-redirect = false

bottom = false

fixed-center = true

width  = 100%
height = 34

offset-x = 0
offset-y = 0

background = ${gruvbox-dark.background}
foreground = ${gruvbox-dark.foreground}

radius-top    = 0.0
radius-bottom = 0.0

line-size  = 5
line-color = ${gruvbox-dark.background}

border-bottom-size  = 0
border-bottom-color = ${gruvbox-dark.background}

padding = 0

module-margin-left  = 0
module-margin-right = 0

font-0 = "JetBrains Mono:style=Regular:size=11;3"
font-1 = "feather:size=12;3"

modules-left   = sep workspaces sep cpu sep temperature sep memory
modules-center = title
modules-right  = keyboard sep pulseaudio sep wired-network sep date sep sysmenu sep

separator =

dim-value = 1

wm-name = LG3D

locale = en_US.UTF-8

tray-position   = right
tray-detached   = false
tray-maxsize    = 16
tray-background = ${gruvbox-dark.background}
tray-foreground = ${gruvbox-dark.foreground}
tray-offset-x   = 0
tray-offset-y   = 0
tray-padding    = 0
tray-scale      = 1.0

enable-ipc = true
